<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/np"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/bday_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/img_margin_top"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <NumberPicker
            android:id="@+id/bday_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/img_margin_top"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <NumberPicker
            android:id="@+id/bday_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/bday_day"
            android:layout_toEndOf="@+id/bday_day" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/np"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/img_margin_top"
        android:layout_marginBottom="@dimen/img_margin_top">

        <Button
            android:id="@+id/birthday_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="@dimen/img_margin_top"
            android:text="Set" />

        <Button
            android:id="@+id/birthday_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>
</RelativeLayout>