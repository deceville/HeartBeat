<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="capstone.heartbeat.HabitsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/habits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:paddingTop="@dimen/demo_question_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habits_all"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/demo_question_padding"
                android:text="@string/habits_smoke"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_yes"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/btn_label" />

                <ImageButton
                    android:id="@+id/btn_smoking_no"
                    android:layout_width="@dimen/btn_width_height"
                    android:layout_height="@dimen/btn_width_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_roundedcorner"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/btn_smoking_no" />

                <ImageButton
                    android:id="@+id/btn_smoking_yes"
                    android:layout_width="@dimen/btn_width_height"
                    android:layout_height="@dimen/btn_width_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_roundedcorner"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_smoking_yes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_no"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/btn_label" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bptreat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:layout_below="@+id/habits" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/habits_bptreatment"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_yes"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/btn_label" />

                <Button
                    android:id="@+id/btn_bptreat_no"
                    android:layout_width="@dimen/btn_width_height"
                    android:layout_height="@dimen/btn_width_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_circle_green" />

                <Button
                    android:id="@+id/btn_bptreat_yes"
                    android:layout_width="@dimen/btn_width_height"
                    android:layout_height="@dimen/btn_width_height"
                    android:layout_margin="10dp"
                    android:background="@drawable/btn_circle_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_no"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/btn_label" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/physical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:layout_below="@+id/bptreat">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/habits_physical"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/physical_01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_sedentary"
                        android:textAlignment="center"
                        android:textSize="@dimen/btn_physical_label" />

                    <ImageButton
                        android:id="@+id/btn_sedentary"
                        android:layout_width="@dimen/btn_physical_width_height"
                        android:layout_height="@dimen/btn_physical_width_height"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_roundedcorner"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_sedentary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/physical_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_light"
                        android:textAlignment="center"
                        android:textSize="@dimen/btn_physical_label" />

                    <ImageButton
                        android:id="@+id/btn_light"
                        android:layout_width="@dimen/btn_physical_width_height"
                        android:layout_height="@dimen/btn_physical_width_height"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_roundedcorner"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_light" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/physical_03"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/physical_label_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_moderate"
                        android:textAlignment="center"
                        android:textSize="@dimen/btn_physical_label" />

                    <ImageButton
                        android:id="@+id/btn_moderate"
                        android:layout_width="@dimen/btn_physical_width_height"
                        android:layout_height="@dimen/btn_physical_width_height"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_roundedcorner"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_medium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/physical_04"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_very"
                        android:textAlignment="center"
                        android:textSize="@dimen/btn_physical_label" />

                    <ImageButton
                        android:id="@+id/btn_very"
                        android:layout_width="@dimen/btn_physical_width_height"
                        android:layout_height="@dimen/btn_physical_width_height"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_roundedcorner"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_very" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/physical_05"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/btn_extreme"
                        android:textAlignment="center"
                        android:textSize="@dimen/btn_physical_label" />

                    <ImageButton
                        android:id="@+id/btn_extreme"
                        android:layout_width="@dimen/btn_physical_width_height"
                        android:layout_height="@dimen/btn_physical_width_height"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/btn_roundedcorner"
                        android:scaleType="fitCenter"
                        android:src="@drawable/btn_extreme" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/freetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:layout_below="@+id/physical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habits_freetime"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                    android:id="@+id/np_freetime_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_picker_bg_color"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:snp_buttonTouchScaleFactor="0.8"
                    app:snp_maxValue="4"
                    app:snp_minValue="1"
                    app:snp_orientation="vertical"
                    app:snp_stepSize="1"
                    app:snp_value="1"/>

                <TextView
                    android:id="@+id/freetime_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hour"/>

                <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                    android:id="@+id/np_freetime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_picker_bg_color"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:snp_buttonTouchScaleFactor="0.8"
                    app:snp_maxValue="59"
                    app:snp_minValue="1"
                    app:snp_orientation="vertical"
                    app:snp_stepSize="1"
                    app:snp_value="1"/>

                <TextView
                    android:id="@+id/freetime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="min"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/sleeptime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:layout_below="@+id/freetime">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habits_sleeptime"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                    android:id="@+id/np_sleeptime_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_picker_bg_color"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:snp_buttonTouchScaleFactor="0.8"
                    app:snp_maxValue="11"
                    app:snp_minValue="7"
                    app:snp_orientation="vertical"
                    app:snp_stepSize="1"
                    app:snp_value="7"/>

                <TextView
                    android:id="@+id/sleeptime_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"/>

                <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                    android:id="@+id/np_sleeptimee_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/number_picker_bg_color"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    app:snp_buttonTouchScaleFactor="0.8"
                    app:snp_maxValue="59"
                    app:snp_minValue="1"
                    app:snp_orientation="vertical"
                    app:snp_stepSize="1"
                    app:snp_value="1"/>

                <TextView
                    android:id="@+id/sleeptime_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
