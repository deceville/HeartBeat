<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="capstone.heartbeat.assessment.RiskResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/riskresults_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/fab_margin"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin">

            <TextView
                android:id="@+id/risk_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/results_risk"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:text="Choose different years"/>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="Note: The probability of risk in 3 or 5 years may not be as accurate as of 10 years."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:layout_below="@+id/riskresults_label"
            android:id="@+id/DonutProgress">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/progress_heartattack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:donut_finished_color="@color/bg_screen1"
                    custom:donut_text_color="@color/bg_screen1"
                    custom:donut_progress="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/btn_label"
                    android:text="Heart Attack" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:id="@+id/progress_stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:donut_progress="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stroke"
                    android:textSize="@dimen/btn_label"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/DonutProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/demo_question_padding"
            android:paddingLeft="@dimen/demo_question_padding"
            android:paddingRight="@dimen/demo_question_padding"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/results_riskfactors"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="BMI" />

                <TextView
                    android:id="@+id/bmi_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="0.0"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/bmi_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="50"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/circle_red" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="LDL Cholesterol" />

                <TextView
                    android:id="@+id/ldl_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="180 mg/dl"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/ldl_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="47"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/circle_orange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="HDL Cholesterol" />

                <TextView
                    android:id="@+id/hdl_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="60 mg/dl"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/hdl_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="68"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/circle_yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Systolic Blood Pressure" />

                <TextView
                    android:id="@+id/sbp_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="140 mmHg"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/systolic_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="47"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/circle_lightgreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Diastolic Blood Pressure" />

                <TextView
                    android:id="@+id/dbp_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="70 mmHg"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/diastolic_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="47"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/circle_green" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Sticks smoked" />

                <TextView
                    android:id="@+id/smoke_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:text="30 sticks"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/sticks_progress"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:scaleY="2"
                    android:max="100"
                    android:progress="68"
                    android:layout_marginTop="5dp"
                    android:progressTint="@color/bg_screen2" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>
