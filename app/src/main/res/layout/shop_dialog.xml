<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin"
            android:text="@string/shop_buy"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <LinearLayout
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label1"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_coin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:text="You currently have 50 coins"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin">

            <LinearLayout
                android:id="@+id/time_5mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_5mins" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_screen2"
                    android:text="BUY"
                    android:textColor="@color/standardWhite"/>
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@color/standardWhite"/>

            <LinearLayout
                android:id="@+id/time_10mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_10mins" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_screen2"
                    android:text="BUY"
                    android:textColor="@color/standardWhite" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/time2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin">

            <LinearLayout
                android:id="@+id/time_15mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_15mins" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_screen2"
                    android:layout_weight="1"
                    android:text="BUY"
                    android:textColor="@color/standardWhite"/>
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@color/standardWhite"/>

            <LinearLayout
                android:id="@+id/time_30mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_30mins" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bg_screen2"
                    android:text="BUY"
                    android:textColor="@color/standardWhite" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/time3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:layout_marginStart="@dimen/fab_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/fab_margin"
            android:paddingStart="@dimen/fab_margin">

            <LinearLayout
                android:id="@+id/time_1hr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_1hour" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bg_screen2"
                    android:text="BUY"
                    android:textColor="@color/standardWhite"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:background="@color/standardWhite"/>

            <LinearLayout
                android:id="@+id/time_2hrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_2hours" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bg_screen2"
                    android:text="BUY"
                    android:textColor="@color/standardWhite"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="@dimen/fab_margin"
            android:paddingEnd="@dimen/fab_margin"
            android:weightSum="2">

            <Button
                android:id="@+id/shop_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/circle_red"
                android:textColor="@color/standardWhite"
                android:text="@string/cancel" />

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/shop_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/circle_green"
                android:textColor="@color/standardWhite"
                android:text="@string/done" />
        </LinearLayout>
    </LinearLayout>



    </ScrollView>