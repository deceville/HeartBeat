<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollableNumberPicker">
        <attr name="snp_buttonIconDown" format="integer"/>
        <attr name="snp_buttonIconUp" format="integer"/>
        <attr name="snp_buttonIconLeft" format="integer"/>
        <attr name="snp_buttonIconRight" format="integer"/>
        <attr name="snp_buttonBackgroundTintSelector" format="integer"/>
        <attr name="snp_buttonTouchScaleFactor" format="float"/>

        <attr name="snp_buttonPaddingLeft" format="dimension"/>
        <attr name="snp_buttonPaddingRight" format="dimension"/>
        <attr name="snp_buttonPaddingTop" format="dimension"/>
        <attr name="snp_buttonPaddingBottom" format="dimension"/>

        <attr name="snp_value" format="integer"/>
        <attr name="snp_maxValue" format="integer"/>
        <attr name="snp_minValue" format="integer"/>
        <attr name="snp_stepSize" format="integer"/>
        <attr name="snp_value_text_size" format="dimension"/>
        <attr name="snp_value_text_color" format="color"/>
        <attr name="snp_value_text_appearance" format="reference"/>

        <attr name="snp_updateInterval" format="integer"/>
        <attr name="snp_scrollEnabled" format="boolean"/>

        <attr name="snp_orientation">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>

        <attr name="snp_valueMarginStart" format="dimension"/>
        <attr name="snp_valueMarginEnd" format="dimension"/>
    </declare-styleable>
</resources>