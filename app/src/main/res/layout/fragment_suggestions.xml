<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="capstone.heartbeat.fragments.SuggestionsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fab_margin"
        android:paddingStart="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingEnd="@dimen/fab_margin"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_addSuggestion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/circle_green"
                android:text="Add to plan"
                android:textColor="#FFFFFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/circle_red"
                android:textColor="#FFFFFF"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
