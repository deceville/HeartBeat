<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="capstone.heartbeat">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic__heartbeat_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_heartbeat_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <provider android:authorities="com.facebook.app.FacebookContentProvider546187392404290"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />
        <activity
            android:name=".account.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".account.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".account.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".assessment.DemographicsActivity"
            android:label="@string/title_activity_demo" />
        <activity
            android:name=".assessment.LaboratoryActivity"
            android:label="@string/title_activity_lab" />
        <activity
            android:name=".assessment.HistoryActivity"
            android:label="@string/title_activity_history" />
        <activity
            android:name=".assessment.HabitsActivity"
            android:label="@string/title_activity_habits" />
        <activity
            android:name=".assessment.RiskResultsActivity"
            android:label="@string/title_activity_results" />
        <activity
            android:name=".others.AddPlanActivity"
            android:label="@string/title_activity_addplan" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".others.AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".account.ProfileActivity"
            android:label="@string/title_activity_profile" />

        <activity
            android:name=".account.EditProfileActivity"
            android:label="@string/title_activity_editprofile"/>
    </application>

</manifest>